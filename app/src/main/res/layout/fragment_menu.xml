<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="100"
    android:baselineAligned="false"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="100dp">

            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="Shalom Weiss"
                android:id="@+id/tv_fullname"
                android:layout_gravity="right|center_vertical"
                android:textSize="20dp"
                android:autoText="false"
                android:textStyle="bold"
                android:textColor="?android:attr/colorBackground" />

            <ImageView
                android:layout_width="147dp"
                android:layout_height="93dp"
                android:id="@+id/imageView2"
                android:src="@drawable/menu_circleimage"
                android:layout_gravity="left|center_vertical" />

            <TextView
                android:layout_width="176dp"
                android:layout_height="38dp"
                android:text="shalom.weiss@gmail.com"
                android:id="@+id/textView"
                android:layout_gravity="right|bottom"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="?android:attr/colorBackground" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rippleorange"
            android:clickable="true"
            android:layout_weight="0.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/textView8"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_trivia" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="true"
            android:background="@drawable/ripplepurple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bibliography"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_bibilo" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="0.5"
            android:background="@drawable/ripplegreen">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favorites"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView7"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_fav" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="true"
            android:background="@drawable/rippleblue" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trivia"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView8"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_trivia" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="0.5"
            android:background="#ff5d5d">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView9"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_fav" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="true"
            android:background="#5badff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView10"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_trivia" />
        </FrameLayout>
    </LinearLayout>


</LinearLayout>