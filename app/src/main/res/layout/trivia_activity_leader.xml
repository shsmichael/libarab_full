                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="70"
                    android:id="@+id/score3"
                    android:textSize="16dp"/>
            </TableRow>
            <TableRow
                android:background="#EDE7F6"
                android:layout_marginBottom="5dp">
