<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:weightSum="1"
android:background="@color/colorAccent">


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:focusable="false" >

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Book Info"
        android:id="@+id/textView4"
        android:singleLine="false"
        android:textStyle="bold|normal"
        android:layout_gravity="center"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView11"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/book_info"
        android:layout_marginRight="10dp" />

</FrameLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:paddingTop="50dp"
    android:baselineAligned="false">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.80" >

        <TextView
            android:text="@string/title_bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/textview_tag_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_item_texttitlecolor"
            android:id="@+id/textView_title1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Title:   اعلان من معمل السجائر الوطنية"
            android:id="@+id/textView_title2"
            android:textColor="#ffff"
            android:textSize="15dp" />

        <TextView
            android:text="@string/author_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_tag_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_item_texttitlecolor"
            android:id="@+id/textView_author1" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textColor="#ffff"
            android:id="@+id/textView_author2" />

        <TextView
            android:text="@string/publisher_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_tag_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_item_texttitlecolor"
            android:id="@+id/textView_publisher1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Publisher: معمل السجائر الوطنية لصاحبها محمد ميقاتي"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/textView_publisher2"
            android:textColor="#ffff" />

        <TextView
            android:text="@string/creationdate_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_tag_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_item_texttitlecolor"
            android:id="@+id/textView_creationdate1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Creation Date:   1938"
            android:id="@+id/textView_creationdate2"
            android:textColor="#ffff" />

        <TextView
            android:text="@string/source_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_tag_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_item_texttitlecolor"
            android:id="@+id/textView_source1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Source:   Ephemera Collection - The National Library of Israel"
            android:id="@+id/textView_source2"
            android:textColor="#ffff" />

        <TextView
            android:text="@string/weblink_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/textview_tag_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/book_item_texttitlecolor"
            android:id="@+id/textView_weblink1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text=" Web Link:   http://primo.nli.org.il/primo_library/"
            android:id="@+id/textView_weblink2"
            android:textColor="#ffff" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />
</LinearLayout>


</LinearLayout>


